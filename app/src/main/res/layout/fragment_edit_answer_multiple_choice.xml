<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_8dp"
    tools:context=".EditAnswerMultipleChoiceFragment">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:id="@id/row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Edit Answers"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="@dimen/size_8dp"
                android:textSize="@dimen/size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/imb_back_to_list"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_back"
                android:background="@color/colorPrimary"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/row_2"
            android:layout_below="@id/row_1"
            android:padding="@dimen/size_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Question ID #"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_QuestionId"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_3"
            android:layout_below="@id/row_2"
            android:padding="@dimen/size_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Question Title"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_QuestionTitle"
                android:padding="@dimen/size_4dp"
                android:textSize="@dimen/size_12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_4"
            android:layout_below="@id/row_3"
            android:padding="@dimen/size_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Question Body"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_QuestionBody"
                android:padding="@dimen/size_4dp"
                android:textSize="@dimen/size_12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_5"
            android:layout_below="@id/row_4"
            android:padding="@dimen/size_4dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Course"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_CourseName"
                android:padding="@dimen/size_4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_6"
            android:layout_below="@id/row_5"
            android:padding="@dimen/size_4dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Topic"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_TopicDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_4dp"
                android:textSize="@dimen/size_12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_7"
            android:layout_below="@id/row_6"
            android:padding="@dimen/size_4dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Difficulty"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_DifficultyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_4dp"
                android:textSize="@dimen/size_12dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_8"
            android:layout_below="@id/row_7"
            android:padding="@dimen/size_4dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Type"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_TypeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_4dp"
                android:textSize="@dimen/size_12dp"/>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/row_9"
            android:layout_below="@id/row_8"
            android:padding="@dimen/size_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Answers"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_answer_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12dp"
                    android:background="@drawable/edittext"
                    android:padding="@dimen/size_4dp"/>
                <EditText
                    android:id="@+id/et_answer_2"
                    android:layout_below="@id/et_answer_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12dp"
                    android:background="@drawable/edittext"
                    android:padding="@dimen/size_4dp"/>
                <EditText
                    android:id="@+id/et_answer_3"
                    android:layout_below="@id/et_answer_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12dp"
                    android:background="@drawable/edittext"
                    android:padding="@dimen/size_4dp"/>
                <EditText
                    android:id="@+id/et_answer_4"
                    android:layout_below="@id/et_answer_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12dp"
                    android:background="@drawable/edittext"
                    android:padding="@dimen/size_4dp"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:id="@+id/row_10"
            android:layout_below="@id/row_9"
            android:padding="@dimen/size_4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Correct Answers"
                android:padding="@dimen/size_4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/child_rl_2"
                android:layout_below="@id/child_rl_1"
                android:orientation="vertical"
                android:padding="@dimen/size_8dp">
                <CheckBox
                    android:id="@+id/cb_subquestion_1"
                    android:text="Answer 1"
                    android:textSize="@dimen/size_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/cb_subquestion_2"
                    android:text="Answer 2"
                    android:textSize="@dimen/size_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/cb_subquestion_3"
                    android:text="Answer 3"
                    android:textSize="@dimen/size_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:id="@+id/cb_subquestion_4"
                    android:text="Answer 4"
                    android:textSize="@dimen/size_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/size_16dp"
            android:id="@+id/row_11"
            android:layout_below="@id/row_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_UpdateAnswers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Answers"/>
            <Button
                android:id="@+id/btn_CancelQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>