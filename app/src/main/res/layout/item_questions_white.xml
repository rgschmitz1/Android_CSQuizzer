<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight"
    android:padding="@dimen/size_8dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_QuestionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_4dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/tv_QuestionTitle"
            android:layout_width="wrap_content"
            android:textSize="@dimen/size_16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_QuestionBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_2"
        android:layout_below="@id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Course"
            android:padding="@dimen/size_4dp"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_CourseName"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_12dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_3"
        android:layout_below="@id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Topic"
            android:padding="@dimen/size_4dp"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_TopicDescription"
            android:layout_width="wrap_content"
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_4"
        android:layout_below="@id/row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Difficulty"
            android:padding="@dimen/size_4dp"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:textSize="@dimen/size_12dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_DifficultyDescription"
            android:layout_width="wrap_content"
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_5"
        android:layout_below="@id/row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Type"
            android:padding="@dimen/size_4dp"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_TypeDescription"
            android:layout_width="wrap_content"
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
