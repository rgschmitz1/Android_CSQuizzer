<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepositoryFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/row_1"
            android:layout_marginTop="@dimen/size_24dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_24dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/imb_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_user"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_topics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_24dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/imb_topics"
                    android:background="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_topic"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/imb_courses"
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_course"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_2"
            android:layout_below="@id/row_1"
            android:layout_marginTop="@dimen/size_24dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_marginRight="@dimen/size_24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                        android:id="@+id/imb_questions"
                        android:background="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_question"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_answers"
                android:background="@color/colorPrimary"
                android:layout_marginRight="@dimen/size_24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/imb_answers"
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_answer"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_subquestions"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/imb_subquestions"
                    android:layout_width="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_subquestion"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>