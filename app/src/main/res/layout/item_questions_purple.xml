<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:padding="@dimen/size_4dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_QuestionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_16dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_QuestionTitle"
            android:layout_width="wrap_content"
            android:textSize="@dimen/size_16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_QuestionBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_2"
        android:layout_below="@id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/tv_CourseName"
            android:padding="@dimen/size_8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_CourseName"
            android:textColor="@color/white"
            android:padding="@dimen/size_8dp"
            android:textSize="@dimen/size_12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_3"
        android:layout_below="@id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/tv_TopicName"
            android:padding="@dimen/size_8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_TopicDescription"
            android:textColor="@color/white"
            android:padding="@dimen/size_8dp"
            android:textSize="@dimen/size_12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_4"
        android:layout_below="@id/row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/tv_AddQuestionDifficulty"
            android:padding="@dimen/size_8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_DifficultyDescription"
            android:textColor="@color/white"
            android:padding="@dimen/size_8dp"
            android:textSize="@dimen/size_12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_5"
        android:layout_below="@id/row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="@string/tv_EditQuestionType"
            android:padding="@dimen/size_8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_TypeDescription"
            android:textColor="@color/white"
            android:padding="@dimen/size_8dp"
            android:textSize="@dimen/size_12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/row_6"
        android:layout_below="@id/row_5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_DeleteQuestion"
            android:text="@string/btn_Delete"
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
