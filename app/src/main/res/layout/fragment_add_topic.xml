<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTopicFragment">
    <RelativeLayout
        android:orientation="vertical"
        android:padding="@dimen/size_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:id="@id/row_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/tv_AddANewTopic"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="@dimen/size_8dp"
                android:textSize="@dimen/size_16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/imb_back_to_list"
                android:layout_marginTop="@dimen/size_8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_back"
                android:background="@color/colorPrimary"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/row_2"
            android:layout_below="@id/row_1"
            android:layout_marginTop="@dimen/size_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/tv_TopicName"
                android:padding="@dimen/size_8dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_width="@dimen/size_100dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_TopicDescription"
                android:background="@drawable/edittext"
                android:padding="@dimen/size_8dp"
                android:textSize="@dimen/size_12dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/size_8dp"
            android:id="@id/row_3"
            android:layout_below="@id/row_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_SubmitTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_AddTopic"/>
            <Button
                android:id="@+id/btn_CancelTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_ClearTopic"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>